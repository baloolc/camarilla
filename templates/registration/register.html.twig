{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent() }}
	|| Register
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags("logRegister") }}
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="bgRegister">
		<div class="row m-0">
			{{ form_start(registrationForm) }}
			<div class="container shadow bg-dark border border-primary border-4 rounded d-flex flex-column align-items-center col-md-5 mt-md-3 mt-4">
				<h1 class="d-flex justify-content-center mt-4 mb-4 text-light">Inscription du compte</h1>
				<div class="align-items-center col-md-6 col-12  fs-5 box text-primary">
					{{ form_row (registrationForm.email, {'attr':{'class':'form-control border-primary'}})}}
				</div>
				<div class="align-items-center col-md-6 col-12 mt-4 fs-5 box text-primary">
					{{ form_row (registrationForm.firstname, {'attr':{'class':'form-control border-primary'}})}}
				</div>
				<div class="align-items-center col-md-6 col-12 mt-4 fs-5 box text-primary">
					{{ form_row (registrationForm.lastname, {'attr':{'class':'form-control border-primary'}})}}
				</div>
				<div class="align-items-center col-md-6 col-12 mt-4 fs-5 box text-primary">
					{{ form_row (registrationForm.plainPassword, {'attr':{'class':'form-control border-primary'}})}}
				</div>
				<div class="d-flex justify-content-center my-5">
					<button type="submit" class="btn btn-primary text-light mb-2 fs-5 border-2 fw-bold">
						<i class="bi bi-person-badge-fill me-2"></i>S'enregistrer</button>
				</div>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
