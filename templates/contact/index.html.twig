{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent() }}
	|| Contact bureau
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags("contact") }}
{% endblock %}


{% block body %}
	<div class="imgContact d-flex flex-column justify-content-center">
		<h1 class="d-flex justify-content-center ps-5 mb-lg-5 mb-4 py-lg-5 mt-5 mt-lg-0 text-light">Contacter le Bureau des Terres d'acionna</h1>
		<div class="">
			{{ form_start(form) }}
			<div class="row m-0">
				<div class="container-sm container-lg mb- col-md-8 col-10">
					<div class="row m-0">
						<div class="d-md-flex justify-content-lg-around align-items-center">
							<div class="fs-6 text-light col-md-5">
								{{ form_row (form.firstname, {'attr':{'class':'form-control formStyle'}})}}
							</div>
							<div class="fs-6 text-light col-md-5 mt-5 mt-lg-0">
								{{ form_row (form.lastname, {'attr':{'class':'form-control formStyle'}})}}
							</div>
						</div>
						<div class="d-md-flex justify-content-lg-around align-items-center my-5 ">
							<div class="fs-6 text-light col-md-5">
								{{ form_row (form.email, {'attr':{'class':'form-control formStyle'}})}}
							</div>
							<div class="fs-6 text-light col-md-5 mt-5 mt-lg-0">
								{{ form_row (form.nickname, {'attr':{'class':'form-control formStyle'}})}}
							</div>
						</div>
						<div class="d-flex justify-content-center mb-5">
							<div class="fs-6 text-light col-md-11">
								{{ form_row (form.message, {'attr':{'class':'form-control formStyle'}})}}
							</div>
						</div>
					</div>
					<div class="d-flex justify-content-center mb-5 pt-lg-3">
						<button class="send p-3 fs-6 fw-bold">
								<i class="bi bi-send-fill me-2"></i>
								{{ button_label|default('Envoyer') }}
						</button>
					</div>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	{% endblock %}
