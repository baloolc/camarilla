{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent() }}
	|| Modifier Profil
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags("sidebar") }}
	{{ encore_entry_link_tags("profil") }}
{% endblock %}


{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="position-relative p-0 d-flex">
				<div class="d-md-none d-block offButon p-0 position-fixed mbutton">
					<a class="btn btn-primary d-flex justify-content-center align-items-center border border-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">
						<i class="bi bi-arrow-right-square"></i>
					</a>
				</div>
				<div class="d-none d-md-flex col-md-2 bg-dark sidebar border-end border-primary border-2">
					{% include 'component/_profil_sidebar.html.twig' %}
				</div>
				<div class="d-md-none d-flex col-md-2 bg-dark sidebar">
					{% include "component/_profil_offcanvas.html.twig" %}
				</div>
				<div data-bs-spy="scroll" data-bs-target="#sidebar" data-bs-offset="0" data-bs-smooth-scroll="true" class="col-md-10 col-12 p-0" tabindex="0">
					<div class="bgEditProfil">
						<div class="d-flex justify-content-center mt-4 col-11 ms-3 ms-md-0 col-md-12">
							<h1 class="bg-primary border border-info border-2 text-light p-3 rounded mt-4 mb-5">Modifier le profil de
								{{ app.user.firstname|capitalize }}
								{{ app.user.lastname|capitalize }}</h1>
						</div>
						<h2>Vos identifiants</h2>
						{{ form_start(form) }}
						<div class="d-flex flex-column align-items-center">
							<div class="mb-md-4 mb-5 col-10 col-md-5">
								{{ form_row (form.firstname, {'attr':{'class':'form-control formStyle fw-bold'}, 'label_attr':{'class':'text-light mb-2'}})}}
							</div>
							<div class="mb-md-4 mb-5 col-10 col-md-5">
								{{ form_row (form.lastname, {'attr':{'class':'form-control formStyle fw-bold'}, 'label_attr':{'class':'text-light mb-2'}})}}
							</div>
							<div class="mb-md-4 mb-5 col-10 col-md-5">
								{{ form_row (form.email, {'attr':{'class':'form-control formStyle fw-bold'}, 'label_attr':{'class':'text-light mb-2'}})}}
							</div>
							<div class="d-flex justify-content-center">
								<button class="btn btn-outline-primary text-light fs-5 mb-3 mb-md-0">
									<i class="bi bi-pencil-square me-2"></i>
									{{ button_label|default('Modifier mes identifiants') }}</button>
							</div>
						</div>
						{{ form_end(form) }}
						<h2>Votre avatar</h2>
						{{ form_start(mediaForm) }}
						<div class="d-flex flex-column align-items-center">
							<div class="mb-md-4 mb-5 col-10 col-md-5">
								{{ form_row (mediaForm.avatar, {'attr':{'class':'form-control formStyle fw-bold'}, 'label_attr':{'class':'text-light mb-2'}})}}
							</div>
							<div class="d-flex justify-content-center">
								<button class="btn btn-outline-primary text-light fs-5 mb-3 mb-md-0">
									<i class="bi bi-pencil-square me-2"></i>
									{{ button_label|default('Modifier mon avatar') }}</button>
							</div>
						</div>
						{{ form_end(mediaForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
