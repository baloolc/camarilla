{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} || Réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<div class="container">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<h1 class="d-flex justify-content-center mt-5 mb-3">Réinitialisation de mot de passe</h1>
		<small class="d-flex justify-content-center my-2">
			Entrez votre adresse e-mail et nous vous enverrons un
			lien pour réinitialiser votre mot de passe.
		</small>
		{{ form_start(requestForm) }}
		{{ form_row(requestForm.email, {'attr':{'class':'form-control'}}) }}
		<div class="d-flex justify-content-center mt-2 mb-5">
			<button class="btn border bg-black text-light rounded mb-3"><i class="bi bi-send-fill me-2"></i>Envoyer une réinitialisation de mot de passe</button>
		</div>
		{{ form_end(requestForm) }}
	</div>
{% endblock %}
